  <script>
   function handler(id, section) {
  const title = document.getElementById("title" + section + id);
  const edit = document.getElementById("edit" + section + id);
  const done = document.getElementById("done" + section + id);
  const input = document.getElementById("input" + section + id);

  if (title) title.setAttribute("hidden", true);
  if (edit) edit.setAttribute("hidden", true);
  if (done) done.removeAttribute("hidden");
  if (input) input.removeAttribute("hidden");
}
  </script>
