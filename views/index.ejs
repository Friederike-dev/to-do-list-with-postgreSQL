<%- include('partials/header.ejs'); -%>

<div id="containerWrapper">


<div id="firstContainer" class="container">
  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>
  <div class="box">
    <% for(let item of listItems){%>
      <div class="item">
        <form action="/delete" method="post">
          <input type="checkbox" onchange="this.form.submit()" name="deleteItemId" value="<%= item.id %>">
        </form>

        <p id="title1<%=item.id%>">
          <%= item.title %>
        </p>
        <form class="edit" action="/edit" method="post">
          <input type="hidden" name="tableName" value="items">
          <input type="hidden" name="updatedItemId" value="<%= item.id %>">
          <input id="input1<%=item.id%>" type="text" name="updatedItemTitle" value="<%= item.title %>" autocomplete="off"
            autofocus="true" hidden="true" />
          <button id="done1<%=item.id%>" class="edit" type="submit" hidden><img class="icon"
              src="/assets/icons/check-solid.svg" alt="tick image"></button>
        </form>
        <button id="edit1<%=item.id%>" class="edit" onclick="handler('<%=item.id%>', '1')"><img class="icon"
            src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
      </div>
      <% } %>

        <form class="item" action="/add" method="post">
          <input type="hidden" name="tableName" value="items">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus="true" />
          <button class="add" type="submit" name="list" value=<%=listTitle %> >+</button>
        </form>
  </div>
</div>


